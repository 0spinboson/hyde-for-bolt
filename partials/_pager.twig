{% set link = pager.makelink() %}

{% if pager.totalpages > 1 %}
    <div class="pagination">
        {# 'prev' #}
        {% if pager.current > 1 and class != "narrow" %}
            <a href="{{link}}{{pager.current-1}}" rel="noindex, follow" class="pagination-item">
                {{ theme.label_newer }}
            </a>
        {% else %}
            <span class="pagination-item">
                {{ theme.label_newer }}
            </span>
        {% endif %}

        {# 'next' #}
        {% if pager.current < pager.totalpages and class != "narrow" %}
            <a href="{{link}}{{pager.current+1}}" rel="noindex, follow" class="pagination-item">
                {{ theme.label_older }}
            </a>
        {% else %}
            <span class="pagination-item">
                {{ theme.label_older }}
            </span>
        {% endif %}
    </div>
{% endif %}
